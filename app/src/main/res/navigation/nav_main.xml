<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/greetingFragment">

    <fragment
        android:id="@+id/greetingFragment"
        android:name="ru.netology.community.ui.auth.GreetingFragment"
        tools:layout="@layout/fragment_greeting">
        <action
            android:id="@+id/action_greetingFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <action
            android:id="@+id/action_greetingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_greetingFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.community.ui.feed.FeedFragment"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_newEventFragment"
            app:destination="@id/newEventFragment" />
        <action
            android:id="@+id/action_feedFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_feedFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_feedFragment_to_greetingFragment"
            app:destination="@id/greetingFragment"
            />
        <action
            android:id="@+id/action_feedFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>

    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.community.ui.feed.NewPostFragment"
        tools:layout="@layout/fragment_new_post" />

    <fragment
        android:id="@+id/newEventFragment"
        android:name="ru.netology.community.ui.feed.NewEventFragment"
        tools:layout="@layout/fragment_new_post" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.netology.community.ui.auth.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="@string/sign_in" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="ru.netology.community.ui.auth.RegistrationFragment"
        tools:layout="@layout/fragment_registration"
        android:label="@string/sign_in" />

    <fragment
        android:id="@+id/userFragment"
        android:name="ru.netology.community.ui.profile.UserFragment"
        android:label="@string/user"
        tools:layout="@layout/fragment_user">

        <action
            android:id="@+id/action_userFragment_to_jobsFragment"
            app:destination="@id/jobsFragment" />
    </fragment>

    <fragment
        android:id="@+id/jobsFragment"
        android:name="ru.netology.community.ui.profile.JobsFragment"
        android:label="@string/jobs"
        tools:layout="@layout/fragment_jobs">

        <action
            android:id="@+id/action_jobsFragment_to_newJobFragment"
            app:destination="@id/newJobFragment" />

    </fragment>

    <fragment
        android:id="@+id/newJobFragment"
        android:name="ru.netology.community.ui.profile.NewJobFragment"
        tools:layout="@layout/fragment_new_job" />

</navigation>